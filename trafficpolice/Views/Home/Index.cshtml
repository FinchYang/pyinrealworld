@model uploadtemplate

<form asp-controller="datamaintenance" role="form" asp-action="uploadtemplate" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="name"></label>
        <input type="text" class="form-control" asp-for="name" />
    </div>
    <div class="form-group">
        <label asp-for="comment"></label>
        <input type="text" class="form-control" asp-for="comment" />
    </div>
    <div class="form-group">
        <label asp-for="templatefile"></label>
        <input type="file" asp-for="templatefile" />
        <p class="help-block">上传。</p>
    </div>
    <button type="submit" class="btn btn-default">提交</button>
</form>